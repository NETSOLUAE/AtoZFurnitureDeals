<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_244"
    android:layout_height="wrap_content"
    android:background="@color/slider_background"
    android:layout_marginStart="@dimen/dimen_2"
    android:layout_marginEnd="@dimen/dimen_6"
    android:layout_marginTop="@dimen/dimen_6"
    android:layout_marginBottom="@dimen/dimen_6"
    android:elevation="@dimen/dimen_2"
    android:id="@+id/slider_detail_layout">

    <!--Height and Width of ImageView (244 X 146) is 65.945945945946 % of Original Image (370 X 222)-->
    <RelativeLayout
        android:layout_width="@dimen/dimen_244"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/slider_product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_146"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_146"
            android:layout_alignParentEnd="true"
            android:paddingTop="109dp"
            android:id="@+id/discount_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_8s"
                    android:background="@drawable/grid_discount"
                    android:contentDescription="@string/app_name"/>

                <TextView
                    android:id="@+id/slider_discount_perxent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-14%"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dimen_11"
                    android:textSize="@dimen/dimen_10s"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/slider_product_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46"
            android:text="Consetur apiscing \nConsetur apiscing \nConsetur apiscing"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_below="@id/discount_layout"
            android:textSize="@dimen/dimen_11s"
            android:textColor="@color/ProductName"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_4"
            android:layout_below="@id/slider_product_name"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/slider_deprecated_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/dimen_4"
                android:paddingStart="@dimen/dimen_0"
                android:textSize="@dimen/dimen_8s"
                android:layout_gravity="center_vertical"
                android:text="350 AED" />

            <TextView
                android:id="@+id/slider_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_11s"
                android:textColor="@color/slider_price"
                android:text=" AED" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>