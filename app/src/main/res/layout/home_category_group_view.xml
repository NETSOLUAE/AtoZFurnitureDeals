<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/category_main_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_100"
        android:elevation="@dimen/dimen_2"
        android:background="@color/slider_background"
        android:layout_marginStart="@dimen/dimen_2"
        android:layout_marginEnd="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginBottom="@dimen/dimen_6">
        <ImageView
            android:id="@+id/home_category_image"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="@color/cart"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_category_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_2"
                android:paddingEnd="@dimen/dimen_2"
                android:paddingTop="@dimen/dimen_2"
                android:paddingBottom="@dimen/dimen_2"
                android:gravity="center"
                android:textSize="@dimen/dimen_11s"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>