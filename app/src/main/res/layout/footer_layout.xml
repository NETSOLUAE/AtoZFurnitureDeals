<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_4"
    android:layout_alignParentBottom="true"
    android:background="@color/colorAccent"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/follow_fb"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_10"
            android:background="@drawable/follow_us_fb"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/follow_twitter"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_10"
            android:background="@drawable/follow_us_twitter"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/follow_linkend"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_10"
            android:background="@drawable/follow_us_link"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/follow_cam"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:background="@drawable/follow_us_cam"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/follow_google"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:background="@drawable/follow_us_google"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/follow_pintrest"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:layout_marginStart="@dimen/dimen_10"
            android:background="@drawable/follow_us_pintrest"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>
</RelativeLayout>